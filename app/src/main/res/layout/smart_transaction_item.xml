<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:layout_marginTop="22dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/amountContainer"
        >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bernd Wittkamp"
            android:ellipsize="end"
            android:maxLength="30"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/amountContainer"
        android:layout_margin="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/amount_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="2.234,"
            android:textSize="26sp"/>

        <TextView
            android:id="@+id/amount_value_decimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/amount_value"
            android:layout_centerVertical="true"
            android:text="79"
            android:layout_toRightOf="@+id/amount_value"
            android:textSize="26sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonContainer"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/buttonYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            style="@style/LabelTextButton"
            android:text="Absetzen" />

        <TextView
            android:id="@+id/buttonWhy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            style="@style/LabelTextButton"
            android:text="HÃ¤?" />

        <TextView
            android:id="@+id/buttonNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            style="@style/LabelTextButton"
            android:text="Lass das" />

    </LinearLayout>


</LinearLayout>